@using GogApp.ViewModels;
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<div class="row">
    <div class="col-md-6 offset-3">
        <p>
        <h4>Register</h4>
        </p>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 ">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input id="Username" asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input id="Email" asp-for="EmailAddress" class="form-control">
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group my-3">
                        <label asp-for="Password" class="control-label"></label>
                        <input id="Password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group my-3">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input id="ConfirmPassword" asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input id="signup-button" class="btn btn-outline-success float right" type="submit"
                            value="Register" />

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
