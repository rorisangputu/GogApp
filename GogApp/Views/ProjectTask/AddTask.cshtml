@using GogApp.ViewModels
@model CreateProjectTaskViewModel

<h1>Add new task</h1>
<form asp-action="AddTask" method="post">
    <input type="hidden" asp-for="ProjectId" />

    <!-- Other fields for the task -->
    <div class="form-group my-5">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Add Task</button>
    <a asp-action="Detail" asp-controller="Project" asp-route-id="@Model.ProjectId" class="btn btn-secondary">Cancel</a>
</form>
